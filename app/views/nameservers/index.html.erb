<h1>Listing nameservers</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nameservers.each do |nameserver| %>
      <tr>
        <td><%= link_to 'Show', nameserver %></td>
        <td><%= link_to 'Edit', edit_nameserver_path(nameserver) %></td>
        <td><%= link_to 'Destroy', nameserver, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Nameserver', new_nameserver_path %>
